{% extends 'base.html.twig' %}

{% block title %}Liste  Membre{% endblock %}

{% block body %}
    <h1>Liste  Membre</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Civilite</th>
                <th>Adresse</th>
                <th>Code_postal</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td>{{ membre.id }}</td>
                <td>{{ membre.email }}</td>
                <td>{{ membre.roles ? membre.roles|json_encode : '' }}</td>
                <td>{{ membre.pseudo }}</td>
                <td>{{ membre.nom }}</td>
                <td>{{ membre.prenom }}</td>
                <td>{{ membre.civilite }}</td>
                <td>{{ membre.adresse }}</td>
                <td>{{ membre.codePostal }}</td>
                <td>{{ membre.ville }}</td>
                <td>
                    <a href="{{ path('membre_show', {'id': membre.id}) }}"><i class="fa fa-file"></i></a>
                    <a href="{{ path('membre_edit', {'id': membre.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('membre_new') }}">Cr√©er</a>
{% endblock %}
